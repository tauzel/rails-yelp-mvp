<div class="container">
  <%= simple_form_for [ @restaurant, @review ] do |f| %>
    <%= f.input :rating %>
    <%= f.input :content %>
    <%= f.submit :submit, class: 'btn btn-primary mt-3 text-white' %>
  <% end %>
  <%= link_to 'Go back', restaurant_path(@restaurant.id), class: "btn btn-primary mt-3 text-white"%>
</div>
