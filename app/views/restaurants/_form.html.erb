<div class="container">
  <%= simple_form_for(@restaurant) do |f| %>
    <%= f.input :name %>
    <%= f.input :category %>
    <%= f.input :address %>
    <%= f.input :phone_number %>
    <%= f.submit :submit, class: 'btn btn-primary mt-3 text-white' %>
  <% end %>
  <%= link_to 'Go back', restaurants_path, class: "btn btn-primary mt-3 text-white"%>
</div>
